{
  "name": "bash-args",
  "version": "0.2.1",
  "description": "Escape, unescape and stringify bash arguments",
  "homepage": "https://github.com/Myhlamaeus/bash-args",
  "author": {
    "name": "Malte-Maurice Dreyer",
    "email": "dreyer.maltem+dev@gmail.com",
    "url": "https://github.com/Myhlamaeus"
  },
  "files": ["lib"],
  "main": "lib/index.js",
  "keywords": [
    "bash",
    "args",
    "escape",
    "unescape",
    "stringify",
    "encode",
    "decode"
  ],
  "devDependencies": {
    "coveralls": "^2.13.1",
    "nsp": "^2.6.3",
    "eslint": "^4.1.0",
    "prettier": "^1.7.0",
    "husky": "^0.14.3",
    "lint-staged": "^4.2.1",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-prettier": "^2.2.0",
    "eslint-config-xo": "^0.18.2",
    "jest": "^21.0.0",
    "jest-cli": "^21.0.0"
  },
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "prepublish": "nsp check",
    "pretest": "eslint .",
    "precommit": "lint-staged",
    "test": "jest"
  },
  "lint-staged": {
    "*.js": ["eslint --fix", "git add"],
    "*.json": ["prettier --write", "git add"]
  },
  "eslintConfig": {
    "extends": ["xo", "prettier"],
    "env": {
      "jest": true,
      "node": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "singleQuote": true,
          "printWidth": 90
        }
      ]
    },
    "plugins": ["prettier"]
  },
  "repository": "git@github.com:Myhlamaeus/bash-args.git",
  "jest": {
    "testEnvironment": "node"
  },
  "license": "MIT",
  "dependencies": {
    "@std/esm": "^0.18.0"
  }
}
